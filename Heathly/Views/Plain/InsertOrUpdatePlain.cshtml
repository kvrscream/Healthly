@model PlainModel
@{
    ViewData["Title"] = "Adicionar Plano";
}

<div class="row">
    <div class="col-md-12">
        <h2>Cadastrar Cliente</h2>
        @using (Html.BeginForm())
        {
            <center>
                @Html.Raw(ViewBag.Message)
                @if(Model.Id != null && Model.Id > 0)
                {
                    @Html.HiddenFor(m => m.Id);
                }
            </center>

            <div class="row">
                <div class="col-md-12 form-group" ´>
                    <input asp-for="Nome" class="form-control" placeholder="Nome" />
                    <span asp-validation-for="Nome" class="text-danger"></span>

                </div>
                <div class="col-md-12 form-group">
                    <input asp-for="InicioVigencia" class="form-control dateMask" placeholder="Data de início da vigência" type="text" />
                    <span asp-validation-for="InicioVigencia" class="text-danger"></span>

                </div>
                <div class="col-md-12 form-group">
                    <input asp-for="FimVigencia" class="form-control dateMask" placeholder="Data do fim da vicgência" type="text" />
                    <span asp-validation-for="FimVigencia" class="text-danger"></span>

                </div>
                <div class="col-md-12 form-group">
                    <label class="">Permite Pessoa Jurídica?</label>
                    <select class="form-control" asp-for="PermitePJ">
                        <option value="true">Sim</option>
                        <option value="false">Não</option>
                    </select>

                </div>
                
                <div class="col-md-12 form-group">
                    <button type="submit" class="btn btn-success">Salvar</button>
                    <button type="reset" class="btn btn-warning">Limpar</button>
                </div>
            </div>
        }
    </div>
</div>

@section scripts{
    <script type="text/javascript" src="~/js/jquery.maskedinput.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".dateMask").mask("99/99/9999")
        })
    </script>
}