@model IEnumerable<PlainModel>
@{
    ViewData["Title"] = "Planos";
}

<div class="col-md-12">
    <div class="jumboltron">
        <h3>@ViewData["Title"]</h3>
    </div>
    <a href="@Url.Action("InsertOrUpdatePlain", "plain")" class="btn btn-primary">
        Novo Plano
    </a>
</div>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table thead-dark">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Data Início Vigência</th>
                            <th>Data Fim Vigência</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Model.Count() > 0)
                        {
                            foreach (PlainModel plain in Model)
                            {
                        <tr>
                            <td>@plain.Nome</td>
                            <td>@plain.InicioVigencia.ToString("dd/MM/yyyy")</td>
                            <td>@plain.FimVigencia.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a href="@Url.Action("InsertOrUpdatePlain", "plain", new { id = plain.Id})" class="btn btn-info">
                                    Editar
                                </a>
                            </td>
                        </tr>
                            }
                        }else
                        {
                            <tr>
                                <td colspan="5">
                                    Nenhum plano cadastrado.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>